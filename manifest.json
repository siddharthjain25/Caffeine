{
    "manifest_version": 3,
    "name": "Caffeine",
    "version": "1.0",
    "description": "A productivity extension that helps you focus by blocking distracting websites.",
    "permissions": [
        "tabs",
        "alarms",
        "notifications",
        "storage",
        "activeTab",
        "scripting",
        "webRequest"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon48.png",
        "48": "icons/icon48.png",
        "128": "icons/icon48.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "sounds/start.mp3",
                "sounds/end.mp3"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "host_permissions": [
        "*://*/*"
    ]
}