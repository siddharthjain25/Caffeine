{
    "manifest_version": 3,
    "name": "Caffeine Mode",
    "description": "A productivity extension that helps you focus by blocking distracting websites.",
    "version": "1.0",
    "permissions": [
        "tabs",
        "alarms",
        "notifications",
        "storage",
        "activeTab",
        "scripting",
        "webRequest",
        "offscreen"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon48.png"
    },
    "icons": {
        "48": "icons/icon48.png"
    }
}